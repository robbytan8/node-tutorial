extends ../layouts/master

block web-content
  // CONTENT HEADER (PAGE HEADER)
  div.content-header
    div.container-fluid
      div.row.mb-2
        div.col-sm-6
          h1.m-0.text-dark Dashboard
        div.col-sm-6
          ol.breadcrumb.float-sm-right
            li.breadcrumb-item Dashboard
            li.breadcrumb-item.active Family Card Management
  // MAIN CONTENT
  div.content
    div.container-fluid
      div.card
        div.card-body.p-4
          form(method="post" action="/fam-card/create")
            div.form-group.row
              label.col-form-label(for="fam-card-id") ID
              input#fam-card-id.form-control(name="id", placeholder="e.g. 0000001", maxlength=16, autofocus, required)
            div.form-group.row
              label.col-form-label(for="name-id") Name
              input#name-id.form-control(name="name", placeholder="e.g. John Doe", maxlength=100, required)
            div.form-group.row
              label.col-form-label(for="name-id") Address
              textarea#address-id.form-control(name="address", placeholder="e.g. Dummy Street 200th", maxlength=300, required, rows=4)
            button.btn.btn-primary(type="submit") Submit