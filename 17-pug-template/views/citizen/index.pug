extends ../layouts/master

block web-content
  // CONTENT HEADER (PAGE HEADER)
  div.content-header
    div.container-fluid
      div.row.mb-2
        div.col-sm-6
          h1.m-0.text-dark Dashboard
        div.col-sm-6
          ol.breadcrumb.float-sm-right
            li.breadcrumb-item Dashboard
            li.breadcrumb-item.active Citizen Management
  // MAIN CONTENT
  div.content
    div.container-fluid
      div.card
        div.card-body.p-4
          div.table-responsive
            table.table.table-striped(id="table-citizen")
              thead
                tr
                  th ID
                  th Name
                  th Address
                  th Family Card ID - Head Name
              tbody
                tr
                  td 327204080819880001
